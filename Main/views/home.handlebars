<!-- Loop over each object in the projects array -->
{{#each transactions as |transaction| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/project/{{transaction.id}}">{{transaction.name}}</a>
    </h2>
    <p>
      <span for="img" aria-label="money">ðŸ’²</span>
      <!-- Pass needed_funding value to the helper function -->
      <span class="dollar-amount">{{format_amount income.needed_funding}}</span>
      needed!
    </p>
    <p>Created by {{transaction.user.name}} on {{format_date transaction.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{transaction.description}}
    </p>
  </div>
</div>
{{/each}}
