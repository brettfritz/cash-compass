<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Transactions | Cash Compass</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/transaction.css">
</head>

<body>
  <div class="d-flex flex-column min-vh-100" style="background-color: rgba(0, 0, 0, 0.5); border-radius: 10px; padding: 20px; min-height: fit-content;">
    <main class="container my-5">
      <h1 class="mb-4" style="color:white">Your Transactions</h1>
      <h5 class="mb-4" style="color:white">View and manage all of your transactions</h5>
      <div class="mb-4">
        <a href="/transactions/add" class="btn btn-primary">Add New Transaction</a>
      </div>
      <div class="table-responsive">
        <table class="table table-striped table-bordered" style="color: white;">
          <thead class="thead-dark">
            <tr>
              <th scope="col">Date</th>
              <th scope="col">Description</th>
              <th scope="col">Vendor</th>
              <th scope="col">Category</th>
              <th scope="col">Amount</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody>
            {{#each transactions}}
            <tr style="background-color: {{stripeColor @index}}">
              <td>{{formatDate this.date}}</td>
              <td>{{this.description}}</td>
              <td>{{this.vendor}}</td>
              <td>{{this.category.name}}</td>
              <td>${{formatAmount this.cost}}</td>
              <td>
                <a href="/transactions/update/{{this.id}}" class="btn btn-warning btn-sm">Edit</a>
                <button class="btn btn-danger btn-sm delete-transaction" data-id="{{this.id}}">Delete</button>
              </td>
            </tr>
            {{else}}
            <tr>
              <td colspan="6" class="text-center">No transactions found.</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </main>
  </div>

  {{#if loggedIn}}
  <script src="/js/logout.js"></script>
  {{/if}}
  <script src="/js/deleteTransaction.js"></script>
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
