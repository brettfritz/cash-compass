<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Transaction:</h3>

    <form class="form new-transaction-form">
      <div class="form-group">
        <label for="transaction-name">transaction name:</label>
        <input class="form-input" type="text" id="transaction-name" name="transaction-name" />
      </div>
      <div class="form-group">
        <label for="income-funding">needed income ($):</label>
        <input class="form-input" type="number" id="income-funding" name="income-funding" />
      </div>
      <div class="form-group">
        <label for="transaction-desc">description:</label>
        <textarea class="form-input" id="transaction-desc" name="transaction-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if transactions.length}}
  <div class="col-md-6 project-list">
    <h3>Current Projects:</h3>

    {{#each transactions as |transaction|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/project/{{transaction.id}}">{{transaction.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{transaction.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
